source "https://rubygems.org"

# Bundle edge Rails instead: gem "rails", github: "rails/rails", branch: "main"
gem "rails", "~> 8.0.2"
# Use mysql2 as the database for Active Record
gem 'mysql2', '>= 0.5.5'
# Use sqlite3 as the database for Active Record in development
gem "sqlite3", ">= 2.1", group: :development
# Use the Puma web server [https://github.com/puma/puma]
gem "puma", ">= 5.0"
# Build JSON APIs with ease [https://github.com/rails/jbuilder]
# gem "jbuilder"

# Use Active Model has_secure_password [https://guides.rubyonrails.org/active_model_basics.html#securepassword]
# gem "bcrypt", "~> 3.1.7"

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
gem "tzinfo-data", platforms: %i[ windows jruby ]

# Use the database-backed adapters for Rails.cache, Active Job, and Action Cable
gem "solid_cache"
gem "solid_queue"
gem "solid_cable"

# Reduces boot times through caching; required in config/boot.rb
gem "bootsnap", require: false

# CSV library (required as of Ruby 3.4.0)
gem "csv"

# Deploy this application anywhere as a Docker container [https://kamal-deploy.org]
gem "kamal", require: false

# Add HTTP asset caching/compression and X-Sendfile acceleration to Puma [https://github.com/basecamp/thruster/]
gem "thruster", require: false

# Use Active Storage variants [https://guides.rubyonrails.org/active_storage_overview.html#transforming-images]
# gem "image_processing", "~> 1.2"

# Use Rack CORS for handling Cross-Origin Resource Sharing (CORS), making cross-origin Ajax possible
gem "rack-cors"

gem 'devise', '4.9.4'
group :ldap do
  # LDAP authentication support (default excluded via BUNDLE_WITHOUT)
  ldap_path = '/usr/local/ngseq/gems/devise_ldap_authenticatable_forked_20190712'
  # Include only when explicitly enabled and the local path exists
  if ENV['ENABLE_LDAP'] == '1' && File.exist?(ldap_path)
    gem 'devise_ldap_authenticatable', '>= 0.8.6.1', :path => ldap_path
  end
  gem 'net-ldap', '>= 0.16.0'
end

# OAuth2 authentication
gem 'omniauth', '~> 2.1'
gem 'omniauth-google-oauth2', '~> 1.1'
gem 'omniauth-github', '~> 2.0'
gem 'omniauth-rails_csrf_protection', '~> 1.0'

# Two-factor authentication
gem 'devise-two-factor', '~> 6.0'
gem 'rotp', '~> 6.2'

# Wallet authentication (commented out due to Ruby 3.3.7 compatibility issues)
# gem 'ethereum.rb', '~> 2.0'
# gem 'web3-eth', '~> 0.2'

# JWT authentication
gem 'jwt', '~> 2.7'
gem 'devise-jwt', '~> 0.9'

# API documentation (Swagger/OpenAPI)
group :development do
  gem 'rswag', '~> 2.13'
end

group :development, :test do
  # See https://guides.rubyonrails.org/debugging_rails_applications.html#debugging-with-the-debug-gem
  gem "debug", platforms: %i[ mri windows ], require: "debug/prelude"

  # Static analysis for security vulnerabilities [https://brakemanscanner.org/]
  gem "brakeman", require: false

  # Omakase Ruby styling [https://github.com/rails/rubocop-rails-omakase/]
  gem "rubocop-rails-omakase", require: false

  # Testing framework
  gem "rspec-rails", "~> 6.0"
  gem "factory_bot_rails", "~> 6.2"
  gem "faker", "~> 3.2"
end

group :test do
  # Test coverage
  gem "simplecov", "~> 0.22"
  gem "simplecov-rcov", "~> 0.3"
  
  # HTTP testing
  gem "webmock", "~> 3.18"
  gem "vcr", "~> 6.2"
  
  # Database cleaning
  gem "database_cleaner-active_record", "~> 2.1"
end
